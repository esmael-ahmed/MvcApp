
@model IEnumerable<DepartmentViewModel>

@{
    ViewData["Title"] = "All Departments";
}
@if (TempData["successMessage"] is not null)
{
    <div id="message" class="alert alert-success">
        @TempData["successMessage"]
    </div>
}
<a asp-action="Create" class="btn btn-success mt-4 mb-3">Create New Department</a>
@if(Model.Count() > 0)
{
    <h1>All Departments</h1>
    
    <table class="mt-5 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.DateOfCreation</td>
                    <partial name="_CRUDButtons" model="@department.Id" />

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h3 class="mt-5 alert alert-warning">There Is No Departments</h3>
    </div>
}


