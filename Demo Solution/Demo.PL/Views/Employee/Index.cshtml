@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "All Employees";
}

@if (TempData["successMessage"] is not null)
{
    <div id="message" class="alert alert-success">
        @TempData["successMessage"]
    </div>
}

<a asp-action="Create" class="btn btn-success mt-4 mb-3">Add New Employee</a>
@if (Model.Count() > 0)
{
    <h1>All Employees</h1>

    <div class="mt-4">
        <form class="row offset-2" asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="Employee Name" />
            </div>
            <div class="col-4">
                <input type="submit" class="btn btn-info" value="Search" />
            </div>
        </form>
    </div>

    <table class="mt-5 table table-striped table-hover">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(e => e.Image)</td>
                <td>@Html.DisplayNameFor(e => e.Name)</td>
                <td>@Html.DisplayNameFor(e => e.Age)</td>
                <td>@Html.DisplayNameFor(e => e.Salary)</td>
                <td>@Html.DisplayNameFor(e => e.Department)</td>
                <td>@Html.DisplayNameFor(e => e.Address)</td>
                <td>@Html.DisplayNameFor(e => e.Email)</td>
                <td>@Html.DisplayNameFor(e => e.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(e => e.HireDate)</td>
                <td>@Html.DisplayNameFor(e => e.IsActve)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td><img src="~/Files/Images/@employee.ImageName" class="rounded" height="40" width="40" alt="EmployeeImage" /></td>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(e => employee.Salary)</td>
                    <td>@Html.DisplayFor(e => employee.Department.Name)</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(e => employee.Email)</td>
                    <td>@employee.PhoneNumber</td>
                    <td>@employee.HireDate</td>
                    <td>
                        @if (employee.IsActve == true)
                        {
                            <i class="fa-solid fa-circle" style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle" style="color:red"></i>

                        }
                    </td>
                    <partial name="_CRUDButtons" model="@employee.Id" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <h3 class="mt-5 alert alert-warning">There Is No Departments</h3>
    </div>
}


