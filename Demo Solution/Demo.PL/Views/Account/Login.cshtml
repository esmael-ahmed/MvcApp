
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1 class="text-center text-white">Sign In</h1>
<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Login">

			<input class="text my-3" asp-for="Email" placeholder="Email" required="">
			<span asp-validation-for="Email" class="text-danger"></span>

			<input class="text my-3" asp-for="Password" placeholder="Password" required="">
			<span asp-validation-for="Password" class="text-danger"></span>

			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Don't have an Account? <a asp-action="Register"> Sign Up Now!</a></p>
		<p><a asp-action="ForgetPassword">Forget Password</a></p>
	</div>
</div>
@section ValidationScriptSection {
	<partial name="_ValidationScripts" />
}


